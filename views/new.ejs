<% layout("./layouts/boilerplate.ejs") %>

<body>

    <div class="row offset-md-3  offset-1">
    <form class="col-md-8  col-11 needs-validation" method="post" action="/listings" novalidate  enctype="multipart/form-data">

        <div class="mb-3">
            <label class="form-label" for="title" >Title <span style="color: red;"><strong> *</strong></span></label>
            <input class="form-control" name="title" type="text" placeholder="Taj Hotel" id="title" required>
            <div class="invalid-feedback">Please give title</div>
        </div>

        <div class="row">
            <div class="mb-3 col">
                <label class="form-label" for="location" >Location <span style="color: red;"><strong> *</strong></span></label>
                <input class="form-control" name="location" type="text" placeholder="Mumbai" id="location" required>
                <div class="invalid-feedback">Please give location</div>
            </div>
    
            <div class="mb-3 col">
                <label class="form-label" for="country">Country <span style="color: red;"><strong> *</strong></span></label>
                <input class="form-control" name="country" type="text" placeholder="India" id="country" required>
                <div class="invalid-feedback">Please give country</div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="price">Price <span style="color: red;"><strong> *</strong></span></label>
            <input class="form-control" name="price" type="text" placeholder="10000" id="price" required>
            <div class="invalid-feedback">Please give price</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="description">Description </label>
            <textarea class="form-control" name="description" id="description" placeholder="A luxarious hotel..."></textarea>
        </div>

        <div class="mb-5">
            <label class="form-label" for="image">Image URL </label>
            <input class="form-control" name="image" type="url" placeholder="image url" id="image" >
        </div>

        <div class="mb-5">
            <label class="form-label" for="image">Upload Image </label>
            <input class="form-control" name="image" type="file" id="image" >
        </div>



        <button class="btn btn-primary mb-5" style="background-color: #0b8661;">Add</button>
        <!-- <label for=""></label><input type="text" placeholder="title"><br><br> -->
    </form>
    </div>
    
</body>
