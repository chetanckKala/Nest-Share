<% layout("./layouts/boilerplate.ejs") %>

<body>

    <div id="filters">

        <div class="filter">
            <i class="fa-solid fa-fire-flame-curved"></i>
            <h6>Trending</h6>
        </div>

        <div class="filter">
            <i class="fa-solid fa-couch"></i>
            <h6>Rooms</h6>
        </div>

        <div class="filter">
            <i class="fa-solid fa-house"></i>
            <h6>Cabins</h6>
        </div>

        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <h6>Pools</h6>
        </div>

        <div class="filter">
            <i class="fa-brands fa-phoenix-framework"></i>
            <h6>Farms</h6>
        </div>

        <div class="filter">
            <i class="fa-solid fa-mountain-city"></i>
            <h6>Countryside</h6>
        </div>

        <div class="filter">
            <i class="fa-solid fa-spa"></i>
            <h6>Luxe</h6>
        </div>

        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            <h6>Castles</h6>
        </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for( let item of result ) { %>
    
        <div class="card mb-5" >
            
            <a href="/listings/<%= item._id %>"><img style="aspect-ratio: 11/7; object-fit: cover;"  class="mt-3 rounded-4 card-img" src=<%= item.image.url %> alt=""></a>
            
            <div class="card-body">
                <a style="color: rgb(24, 24, 24);" href="/listings/<%= item._id %>"><h5 class="card-title"><strong><%= item.title %></strong></h5></a>
                <a style="color: rgb(99, 99, 99);" href="https://www.google.com/maps/place/<%= item.location %>"><h6 class="card-subtitle mb-3"><i class="fa-solid fa-location-dot" style="color: #ff385c;"></i>  &nbsp;<%= item.location %>, <%= item.country %></h6></a>
                
    
                <button class="btn btn-sm rounded-3 btn-outline-dark">â‚¹ <%= item.price.toLocaleString() %> /night</button>
            </div>

        </div>

    <% } %>
    </div>

</body>
